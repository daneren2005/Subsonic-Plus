<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dip"
        android:background="@color/mediaControlBackground">

    <TextView
            android:text="The Celestials"
            android:id="@+id/download_song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/download_toggle_list"
            android:layout_alignParentLeft="true"
            android:textColor="@color/mediaControlForeground"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"/>

    <TextView
            android:text="The Smashing Pumpkins bla ablasdf lksjdf lskdjf lkjdf "
            android:id="@+id/download_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/download_song_title"
            android:layout_toLeftOf="@+id/download_toggle_list"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:ellipsize="end"/>

    <ImageButton
            android:id="@+id/download_toggle_list"
            android:src="@drawable/media_toggle_list"
            android:background="@drawable/media_button"
            android:paddingLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/download_overflow"
            android:layout_centerVertical="true"/>

    <ImageButton
            android:id="@+id/download_overflow"
            android:src="@drawable/action_overflow"
            android:background="@drawable/media_button"
            android:paddingLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

</RelativeLayout>